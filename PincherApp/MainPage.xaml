<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PincherApp.MainPage">
    <ScrollView>
        <StackLayout>
            <Label Text="Select your personal tariff" FontSize="Large" Margin="10" />
            <Slider x:Name="ManagersSlider" Minimum="0" Maximum="20" ValueChanged="OnSliderValueChanged" Margin="10" />
            <Label Text="Number of Managers: 0" x:Name="ManagersLabel" Margin="10" />
            <Slider x:Name="SalesDeptManagersSlider" Minimum="1" Maximum="60" ValueChanged="OnSliderValueChanged" Margin="10" />
            <Label Text="Number of Sales Department Managers: 1" x:Name="SalesDeptManagersLabel" Margin="10" />
            <StackLayout x:Name="ImagesArea" Orientation="Horizontal" HorizontalOptions="Center" Margin="10" MinimumHeightRequest="300" MinimumWidthRequest="300">
                <!-- The images will be added dynamically in the code-behind -->
            </StackLayout>
            <Label x:Name="OptimizationLabel" IsVisible="False" Text="The work can be optimized because the number of managers is too large" TextColor="Red" Margin="10" />
        </StackLayout>
    </ScrollView>
</ContentPage>
